#!/usr/bin/env bash
SCRIPT_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)
DOTFILES_DIR=${SCRIPT_DIR%/*}
# shellcheck disable=SC1091
source "${DOTFILES_DIR}/scripts/bash_library.sh"

COMMAND_NAME=$1
SUB_COMMAND=$2

sub_install() {
  init_func "${SUB_COMMAND}"
  (cd "${DOTFILES_DIR}" && make INSTALL_YQ)
  add_install ".brew.formulas" "${SUB_COMMAND}"
  brew_function "install" "${SUB_COMMAND}"
}

sub_uninstall() {
  init_func "${SUB_COMMAND}"
  (cd "${DOTFILES_DIR}" && make INSTALL_YQ)
  remove_install ".brew.formulas" "${SUB_COMMAND}"
  brew_function "uninstall" "${SUB_COMMAND}"
}

if [ ${V} -lt 5 ]; then V=5; fi

sub_"${COMMAND_NAME}" "$@" 2>/dev/null
if [ $? = 127 ]; then
  \brew "$@"
fi
